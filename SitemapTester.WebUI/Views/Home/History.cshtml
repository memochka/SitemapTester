@model IEnumerable<SitemapTester.Domain.Entities.MeasurementArchive>

@{
    ViewBag.Title = "Request History";
}
<section>
    <article>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <br>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th><b>Domain name</b></th>
                                <th><b>Request date</b></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.DomainName</td>
                                    <td>
                                        @Html.ActionLink(item.MeasurementDate.ToString(), "Test", new { item.MeasurementGuid })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </article>
</section>